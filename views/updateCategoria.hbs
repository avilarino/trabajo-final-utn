<body style="background: hsl(230, 17%, 14%)">
<div class="container-fluid m-0" style="height : 100vh">
    <div class="row justify-content-center align-items-center" style="height : 100vh">
        <div class="col-7 text-light">
            <form method="post" action="/admin/categorias/update/{{categoria.id}}">
                <div class="form-group">
                    <label for="nombre">Nombre de la categoria</label>
                    <input type="text" class="form-control" name="nombre" id="nombre" value="{{categoria.nombre}}">
                </div>
                 <div class="form-group">
                    <label for="descripcion">Descripcion</label>
                    <input type="text" class="form-control" name="descripcion" id="descripcion" value="{{categoria.descripcion}}">
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn mt-3 text-light" style="background:hsl(228, 28%, 20%)">Modificar Categoria</button>
                </div>
            </form>
        </div>
    </div>
</div>
    